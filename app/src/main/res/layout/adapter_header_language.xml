<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/header_padding"
    android:orientation="vertical"
    android:padding="@dimen/popup_padding">

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/language"
        android:textSize="36sp"
        app:appFontStyle="bold"
        app:textColorStyle="accent" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/click_to_participate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_to_participate"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        app:appFontStyle="regular"
        app:drawableEndCompat="@drawable/ic_open_in_new_tiny"
        app:drawableTintStyle="accent"
        app:textColorStyle="secondary" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credits"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        app:appFontStyle="regular"
        app:drawableEndCompat="@drawable/ic_arrow_right_tiny"
        app:drawableTintStyle="accent"
        app:textColorStyle="secondary" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_type_face_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular"
        app:textColorStyle="secondary" />

    <app.simple.inure.decorations.theme.ThemeDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp" />

</LinearLayout>
