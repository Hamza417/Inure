<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_gravity="bottom"
    android:clipToPadding="false"
    android:padding="@dimen/dialog_padding">

    <app.simple.inure.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/popup_item_gap_length"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/name"
            android:textSize="@dimen/info_text_medium"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/desc_text_size"
            app:appFontStyle="regular"
            app:textColorStyle="secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dialog_padding"
                android:text="@string/state"
                android:textSize="@dimen/info_text_small"
                android:layout_weight="1"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/state_group"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:selectionRequired="false"
                app:singleSelection="true">

                <app.simple.inure.decorations.views.Button
                    android:id="@+id/allow"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/allow" />

                <app.simple.inure.decorations.views.Button
                    android:id="@+id/ignore"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/ignore" />

                <app.simple.inure.decorations.views.Button
                    android:id="@+id/deny"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/deny" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dialog_padding"
                android:text="@string/scope"
                android:textSize="@dimen/info_text_small"
                android:layout_weight="1"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/scope_group"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:selectionRequired="false"
                app:singleSelection="true">

                <app.simple.inure.decorations.views.Button
                    android:id="@+id/uid"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/uid" />

                <app.simple.inure.decorations.views.Button
                    android:id="@+id/application"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/application" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uid_mode_desc"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="@dimen/dialog_padding"
            android:textSize="@dimen/desc_text_size"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            app:appFontStyle="regular"
            app:drawableStartCompat="@drawable/ic_warning_12dp"
            app:drawableTintStyle="accent"
            app:textColorStyle="tertiary" />

        <LinearLayout
            android:id="@+id/btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/popup_padding"
            android:orientation="horizontal">

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:text="@string/close"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:textColorStyle="accent" />

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:text="@string/apply"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:textColorStyle="accent" />

        </LinearLayout>

    </app.simple.inure.decorations.corners.DynamicCornerLinearLayout>

</FrameLayout>
