<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true"
    android:maxHeight="@dimen/dialog_height">

    <app.simple.inure.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_padding"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="@dimen/dialog_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <app.simple.inure.decorations.views.AppIconImageView
                android:id="@+id/app_icon"
                android:layout_width="@dimen/app_icon_dimension"
                android:layout_height="@dimen/app_icon_dimension"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/info_text_medium"
                app:appFontStyle="bold"
                app:drawableTintStyle="warning"
                app:layout_constraintBottom_toTopOf="@+id/package_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/app_icon"
                app:layout_constraintTop_toTopOf="@+id/app_icon"
                app:layout_constraintVertical_bias="0.0"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/package_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="@dimen/popup_item_gap_length"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="regular"
                app:layout_constraintBottom_toTopOf="@+id/flags"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/app_icon"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:textColorStyle="secondary" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/flags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="regular"
                app:layout_constraintBottom_toTopOf="@id/desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/app_icon"
                app:layout_constraintTop_toBottomOf="@id/package_id"
                app:textColorStyle="accent" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="regular"
                app:layout_constraintBottom_toBottomOf="@+id/app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/app_icon"
                app:layout_constraintTop_toBottomOf="@+id/flags"
                app:textColorStyle="secondary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/popup_padding" />

        <LinearLayout
            android:id="@+id/btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:text="@string/close"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:textColorStyle="accent" />

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:text="@string/uninstall"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:textColorStyle="accent" />

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:text="@string/disable"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:textColorStyle="accent" />

        </LinearLayout>
    </app.simple.inure.decorations.corners.DynamicCornerLinearLayout>
</FrameLayout>
